<p>
{% if collections.secondary %}
{% assign previousPost = collections.secondary | getPreviousCollectionItem %}
{% assign nextPost = collections.secondary | getNextCollectionItem %}
{% assign thisPost = collections.secondary | getCollectionItem %}
{% if nextPost or previousPost %}
{% if previousPost %}{% if previousPost.data.fileslug == thisPost.data.fileslug %}
Previous post {{thisPost.data.fileslug}}: <a role="button" href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
{% endif %}{% endif %}
{% if nextPost %}{% if nextPost.data.fileslug == thisPost.data.fileslug %}
Next post: <a role="button" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
{% endif %}{% endif %}
{% endif %}
{% endif %}
</p>